{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "SAP Job Scheduling Service - Job Definition Template",

  "name": "myScheduledJob",
  "description": "Description of what this job does",
  "action": "https://<your-app>.<region>.hana.ondemand.com/api/execute",
  "active": true,
  "httpMethod": "POST",
  "startTime": null,
  "endTime": null,

  "ansConfig": {
    "$comment": "SAP Alert Notification (Cloud Foundry only)",
    "onError": true,
    "onSuccess": false
  },

  "calmConfig": {
    "$comment": "SAP Cloud ALM monitoring",
    "enabled": true
  },

  "schedules": [
    {
      "$comment": "Option 1: Cron-based recurring schedule",
      "cron": "* * * * 8 0 0",
      "description": "Runs daily at 08:00 UTC",
      "active": true,
      "data": {
        "param1": "value1"
      },
      "startTime": null,
      "endTime": null
    },
    {
      "$comment": "Option 2: Interval-based recurring schedule",
      "repeatInterval": "1 hour",
      "description": "Runs every hour",
      "active": true,
      "data": {
        "mode": "incremental"
      }
    },
    {
      "$comment": "Option 3: Daily at specific time",
      "repeatAt": "18.30",
      "description": "Runs daily at 18:30 UTC",
      "active": true
    },
    {
      "$comment": "Option 4: One-time execution",
      "time": "2025-12-31T23:59:00Z",
      "description": "One-time execution on New Year's Eve",
      "active": true
    },
    {
      "$comment": "Option 5: Immediate execution",
      "time": "now",
      "description": "Execute immediately",
      "active": true
    }
  ]
}
