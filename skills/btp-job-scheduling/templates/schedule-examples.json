{
  "$comment": "SAP Job Scheduling Service - Schedule Examples",

  "cronExamples": {
    "$comment": "SAP Cron Format: Year Month Day DayOfWeek Hour Minute Second",

    "everyHour": {
      "cron": "* * * * * 0 0",
      "description": "Every hour at minute 0"
    },
    "every30Minutes": {
      "cron": "* * * * * */30 0",
      "description": "Every 30 minutes"
    },
    "everyWeekday8AM": {
      "cron": "* * * mon:fri 8 0 0",
      "description": "Monday to Friday at 08:00 UTC"
    },
    "everyFriday5PM": {
      "cron": "* * * fri 17 0 0",
      "description": "Every Friday at 17:00 UTC"
    },
    "firstMondayOfMonth": {
      "cron": "* * * 1.mon 9 0 0",
      "description": "First Monday of each month at 09:00 UTC"
    },
    "lastDayOfMonth": {
      "cron": "* * -1 * 23 59 0",
      "description": "Last day of each month at 23:59 UTC"
    },
    "lastSundayOfMonth": {
      "cron": "* * * -1.sun 6 0 0",
      "description": "Last Sunday of each month at 06:00 UTC"
    },
    "quarterly": {
      "cron": "* 3,6,9,12 1 * 0 0 0",
      "description": "First day of each quarter at midnight UTC"
    },
    "everyOtherWeekday": {
      "cron": "* * * mon,wed,fri 12 0 0",
      "description": "Mon, Wed, Fri at 12:00 UTC"
    }
  },

  "repeatIntervalExamples": {
    "every5Minutes": {
      "repeatInterval": "5 minutes",
      "description": "Every 5 minutes (minimum allowed)"
    },
    "everyHour": {
      "repeatInterval": "1 hour",
      "description": "Every hour from start time"
    },
    "every6Hours": {
      "repeatInterval": "6 hours",
      "description": "Every 6 hours"
    },
    "daily": {
      "repeatInterval": "1 day",
      "description": "Once per day"
    },
    "weekly": {
      "repeatInterval": "1 week",
      "description": "Once per week"
    }
  },

  "repeatAtExamples": {
    "morning": {
      "repeatAt": "6.00am",
      "description": "Daily at 06:00 UTC"
    },
    "lunchtime": {
      "repeatAt": "12.00",
      "description": "Daily at 12:00 UTC"
    },
    "evening": {
      "repeatAt": "6.30pm",
      "description": "Daily at 18:30 UTC"
    },
    "midnight": {
      "repeatAt": "0.00",
      "description": "Daily at midnight UTC"
    }
  },

  "oneTimeExamples": {
    "immediate": {
      "time": "now",
      "description": "Execute immediately"
    },
    "inOneHour": {
      "time": "1 hour from now",
      "description": "Execute in 1 hour"
    },
    "tomorrow": {
      "time": "tomorrow at 9am",
      "description": "Tomorrow at 09:00"
    },
    "specificDate": {
      "time": "2025-12-25T00:00:00Z",
      "description": "Christmas 2025 at midnight UTC"
    },
    "isoFormat": {
      "time": {
        "date": "2025-10-15 14:30 +0000",
        "format": "YYYY-MM-DD HH:mm Z"
      },
      "description": "October 15, 2025 at 14:30 UTC"
    }
  }
}
